<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yangchenle.electricityconsumptionsystem.dao.CopyRecordDao">
    <resultMap id="CopyRecord" type="com.yangchenle.electricityconsumptionsystem.entity.ElectricEntity">
        <result column="CopyId" property="copyId"/>
        <result column="ElectricId" property="electricId"/>
        <result column="CopyData" property="copyData"/>
        <result column="AddTime" property="addTime"/>
        <result column="UpdateTime" property="updateTime"/>
    </resultMap>

    <sql id="allFile">
        CopyId,
        ElectricId,
        CopyData,
        AddTime,
        UpdateTime
    </sql>

    <insert id="insertCopyRecord" parameterType="map">
        INSERT INTO
        copy_record(CopyId, ElectricId, CopyData, AddTime, UpdateTime)
        VALUES
        (
        #{copyId},
        #{electricId},
        #{copyData},
        NOW(),
        NOW()
        )
    </insert>

    <update id="updateCopyRecord">
        UPDATE copy_record
        SET
        CopyData = #{copyData}
        WHERE CopyId = #{copyId}
    </update>
</mapper>